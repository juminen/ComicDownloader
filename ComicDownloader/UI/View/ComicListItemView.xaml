                UpdateSourceTrigger=PropertyChanged, 
                FallbackValue='Name'}" />
            <StackPanel
                Orientation="Horizontal">
            <Label
                Content="Last download date:" />
            <Label
                Content="{Binding LastDownloadDate,
                Mode=OneWay, 
                UpdateSourceTrigger=PropertyChanged, 
                FallbackValue='LastDownloadDate'}" />
            </StackPanel>
        </StackPanel>-->
    </Grid>
</UserControl>
